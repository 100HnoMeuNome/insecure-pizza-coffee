# Application
NODE_ENV=development
PORT=3000
SESSION_SECRET=insecure-secret-change-me

# Database
DB_HOST=mysql
DB_PORT=3306
DB_USER=pizzauser
DB_PASSWORD=pizzapass123
DB_NAME=pizzacoffee

# Datadog Configuration
DD_API_KEY=your-datadog-api-key-here
DD_SITE=datadoghq.com
DD_SERVICE=insecure-pizza-coffee
DD_ENV=development
DD_VERSION=1.0.0
DD_TRACE_ENABLED=true
DD_LOGS_INJECTION=true
DD_RUNTIME_METRICS_ENABLED=true

# Datadog ASM (Application Security Monitoring)
DD_APPSEC_ENABLED=true
DD_APPSEC_WAF_TIMEOUT=5000
DD_APPSEC_RATE_LIMIT=100
# Set to 'true' to enable blocking mode (blocks attacks), 'false' for monitoring only
DD_APPSEC_BLOCKING_ENABLED=false
# Custom rules file path (optional)
# DD_APPSEC_RULES=/path/to/custom/rules.json

# API Security
DD_API_SECURITY_ENABLED=true
DD_API_SECURITY_REQUEST_SAMPLE_RATE=1.0

# Datadog IAST (Interactive Application Security Testing)
DD_IAST_ENABLED=true
DD_IAST_REQUEST_SAMPLING=100
DD_IAST_MAX_CONCURRENT_REQUESTS=2
DD_IAST_MAX_CONTEXT_OPERATIONS=2

# Datadog SCA (Software Composition Analysis)
DD_APPSEC_SCA_ENABLED=true

# Remote Configuration (required for blocking and other ASM features)
DD_REMOTE_CONFIGURATION_ENABLED=true
