<%- include('header') %>

<div class="form-container">
  <h2><%= __('register_title') %></h2>

  <% if (error) { %>
    <div class="alert alert-error"><%= error %></div>
  <% } %>

  <% if (success) { %>
    <div class="alert alert-success"><%= success %></div>
  <% } %>

  <form action="/auth/register" method="POST" class="form">
    <div class="form-group">
      <label for="username"><%= __('register_username') %> *</label>
      <input type="text" id="username" name="username" required>
    </div>

    <div class="form-group">
      <label for="password"><%= __('register_password') %> *</label>
      <input type="password" id="password" name="password" required>
    </div>

    <button type="submit" class="btn btn-primary"><%= __('register_button') %></button>
  </form>

  <p class="form-footer">
    <%= __('register_has_account') %> <a href="/auth/login"><%= __('register_login') %></a>
  </p>
</div>

<%- include('footer') %>
