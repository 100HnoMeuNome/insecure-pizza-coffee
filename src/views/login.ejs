<%- include('header') %>

<div class="form-container">
  <h2><%= __('login_title') %></h2>

  <% if (error) { %>
    <div class="alert alert-error"><%= error %></div>
  <% } %>

  <form action="/auth/login" method="POST" class="form">
    <div class="form-group">
      <label for="username"><%= __('login_username') %></label>
      <input type="text" id="username" name="username" required>
    </div>

    <div class="form-group">
      <label for="password"><%= __('login_password') %></label>
      <input type="password" id="password" name="password" required>
    </div>

    <button type="submit" class="btn btn-primary"><%= __('login_button') %></button>
  </form>

  <p class="form-footer">
    <%= __('login_no_account') %> <a href="/auth/register"><%= __('login_register') %></a>
  </p>
</div>

<%- include('footer') %>
