<%- include('header') %>

<h2>Checkout</h2>

<div class="checkout-container">
  <div class="checkout-section">
    <h3>Order Summary</h3>
    <table class="cart-table">
      <thead>
        <tr>
          <th>Product</th>
          <th>Quantity</th>
          <th>Price</th>
        </tr>
      </thead>
      <tbody>
        <% cart.forEach(item => { %>
          <tr>
            <td><%= item.name %></td>
            <td><%= item.quantity %></td>
            <td>R$ <%= (item.price * item.quantity).toFixed(2) %></td>
          </tr>
        <% }); %>
      </tbody>
      <tfoot>
        <tr>
          <td colspan="2"><strong>Total</strong></td>
          <td><strong>R$ <%= total.toFixed(2) %></strong></td>
        </tr>
      </tfoot>
    </table>
  </div>

  <div class="checkout-section">
    <h3>Delivery Information</h3>
    <form id="checkout-form" class="form">
      <div class="form-group">
        <label for="deliveryAddress">Delivery Address *</label>
        <textarea id="deliveryAddress" name="deliveryAddress" required><%= userDetails.address || '' %></textarea>
      </div>

      <div class="form-group">
        <label for="deliveryPhone">Phone Number *</label>
        <input type="tel" id="deliveryPhone" name="deliveryPhone" value="<%= userDetails.phone || '' %>" required>
      </div>

      <div class="form-group">
        <label for="notes">Order Notes</label>
        <textarea id="notes" name="notes" rows="3" placeholder="Special instructions..."></textarea>
      </div>

      <h3>Payment Method</h3>
      <div class="form-group">
        <label>
          <input type="radio" name="paymentMethod" value="credit_card" checked>
          Credit Card
        </label>
        <label>
          <input type="radio" name="paymentMethod" value="pix">
          PIX
        </label>
      </div>

      <div id="credit-card-fields">
        <div class="credit-card-logos">
          <img src="https://upload.wikimedia.org/wikipedia/commons/0/04/Visa.svg" alt="Visa" class="card-logo">
          <img src="https://upload.wikimedia.org/wikipedia/commons/2/2a/Mastercard-logo.svg" alt="Mastercard" class="card-logo">
          <img src="https://upload.wikimedia.org/wikipedia/commons/f/fa/American_Express_logo_%282018%29.svg" alt="American Express" class="card-logo">
        </div>
        <div class="form-group">
          <label for="cardNumber">Card Number</label>
          <input type="text" id="cardNumber" name="cardNumber" placeholder="1234 5678 9012 3456">
        </div>

        <div class="form-group">
          <label for="cardHolder">Card Holder Name</label>
          <input type="text" id="cardHolder" name="cardHolder" placeholder="John Doe">
        </div>

        <div class="form-row">
          <div class="form-group">
            <label for="expiryDate">Expiry Date</label>
            <input type="text" id="expiryDate" name="expiryDate" placeholder="MM/YY">
          </div>

          <div class="form-group">
            <label for="cvv">CVV</label>
            <input type="text" id="cvv" name="cvv" placeholder="123">
          </div>
        </div>
      </div>

      <div id="pix-fields" style="display: none;">
        <div class="form-group">
          <label for="pixKey">PIX Key (Email or Phone)</label>
          <input type="text" id="pixKey" name="pixKey" placeholder="your@email.com">
        </div>
      </div>

      <button type="submit" class="btn btn-primary btn-block">Place Order</button>
    </form>
  </div>
</div>

<%- include('footer') %>
